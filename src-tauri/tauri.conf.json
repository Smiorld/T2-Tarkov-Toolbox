{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "T2 塔科夫工具箱",
  "version": "0.1.0",
  "identifier": "com.t2tarkovtoolbox.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "T2 塔科夫工具箱",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "installerIcon": null,
        "installMode": "perMachine",
        "languages": ["SimpChinese"]
      }
    },
    "longDescription": "T2 塔科夫工具箱 - 包含屏幕滤镜、战术地图、物价查询等功能的本地桌面应用",
    "shortDescription": "塔科夫游戏辅助工具箱"
  }
}
