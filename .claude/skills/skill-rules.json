{
  "version": "1.0",
  "description": "Skill activation triggers for T2-Tarkov-Toolbox project",
  "skills": {
    "skill-developer": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "用于创建和管理 Claude Code 技能的元技能",
      "promptTriggers": {
        "keywords": [
          "创建技能",
          "skill",
          "技能开发",
          "create skill",
          "skill development",
          "hook",
          "hooks"
        ],
        "intentPatterns": [
          "如何.*技能",
          "怎么.*skill",
          "创建.*技能",
          "开发.*技能"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          ".claude/skills/**/*.md",
          ".claude/skills/**/SKILL.md",
          ".claude/skills/skill-rules.json"
        ]
      }
    }
  }
}
